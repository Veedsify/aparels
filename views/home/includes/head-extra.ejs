<style>
    .preloader-body {
        position: fixed;
        z-index: 10000 !important;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-color: #fff;
        pointer-events: all;
        opacity: 1;
        transition: 1s ease-out;
    }

    @keyframes bounce {
        from {
            transform: translateY(0);
        }

        to {
            transform: translateY(-60px);
        }
    }

    /* @keyframes move {
            from {
                left: calc(100% - 15px);
