    rel="stylesheet">

<style>
    .preloader-body {
        position: fixed;
        z-index: 10000 !important;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-color: #fff;
        pointer-events: all;
        opacity: 1;
        transition: 1s ease-out;
    }

    @keyframes bounce {
        from {
            transform: translateY(0);
        }

        to {
            transform: translateY(-60px);
        }
    }

    /* @keyframes move {
            from {
                left: calc(100% - 15px);
            }
    
            to {
                left: 0%;
            }
        } */

    /* .line {
            position: absolute;
            background-color: red;
            height: 3px;
            width: 25px;
            border-radius: 1px;
            bottom: 0;
            left: calc(100% - 15px);
            animation: move 1s ease-in-out infinite alternate;
        } */

    .preloader-image {
        width: 100px;
        animation: bounce 1s ease-in-out infinite alternate;
    }

    .preloader-container {
        display: flex;
        position: relative;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .preloader-body.done {
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
    }
</style>


<script>
    // Remove the scrollbar from the document
    window.addEventListener('DOMContentLoaded', function (e) {
        const preloader = document.querySelector('.preloader-body')
        setTimeout(() => {
            preloader.classList.add('done')
        }, 1000);
    })

</script>