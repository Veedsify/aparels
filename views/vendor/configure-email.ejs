<body>
  <!-- Top Bar Start -->
  <%- include('nav/top-bar', {"user": user}) %>
    <!-- Top Bar End -->

    <div class="page-wrapper">
      <!-- Page Content-->
      <div class="page-content">
        <div class="container-fluid">
          <!-- Page-Title -->
          <div class="row">
            <div class="col-sm-12">
              <div class="page-title-box">
                <div class="float-right">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="javascript:void(0);">Medic Apparels</a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="javascript:void(0);">Configuration</a>
                    </li>
                    <li class="breadcrumb-item active">Emails / Server</li>
                  </ol>
                  <!--end breadcrumb-->
                </div>
                <!--end /div-->
                <h4 class="page-title">Email Configurations</h4>
              </div>
              <!--end page-title-box-->
            </div>
            <!--end col-->
          </div>
          <!--end row-->
          <!-- end page title end breadcrumb -->
        </div>
        <!-- container -->
        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-body">

                <form id="updateEmails" method="POST">
                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      Admin Email:
                    </label>
                    <input type="email" minlength="5" maxlength="50" required name="admin_email"
                      value="<%= emails.admin_email %>" class="form-control" id="admin_email"
                      placeholder="example@mail.com">
                  </div>

                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      Contact Email:
                    </label>
                    <input type="email" minlength="5" maxlength="50" required name="contact_email"
                      value="<%= emails.contact_email %>" class="form-control" id="contact_email"
                      placeholder="example@mail.com">
                  </div>

                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      Inbox/Config Email:
                    </label>
                    <input type="email" minlength="5" maxlength="50" required name="inbox_email"
                      value="<%= emails.inbox_email %>" class="form-control" id="inbox_email"
                      placeholder="example@mail.com">
                  </div>

                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      Customer Care Email:
                    </label>
                    <input type="email" minlength="5" maxlength="50" required name="customer_email"
                      value="<%= emails.customer_email %>" class="form-control" id="customer_email"
                      placeholder="example@mail.com">
                  </div>

                  <div class="form-group">
                    <button type="submit" name="adminEmail" class="btn btn-success w-100 btn-lg">Save <i
                        class="mdi mdi-content-save"></i></button>
                  </div>

                </form>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card">
              <div class="card-body">

                <form action="" method="POST" id="updateSMTP">
                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      SMTP Host:
                    </label>
                    <input type="text" minlength="5" maxlength="50" required name="SMTP_HOST" class="form-control"
                      id="smtp_host" placeholder="smtp.mail.com" value="<%= smtp.host %>">
                  </div>

                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      SMTP port:
                    </label>
                    <input type="text" minlength="3" maxlength="50" required name="SMTP_PORT" class="form-control"
                      id="smtp_port" placeholder="404" value="<%= smtp.port %>">
                  </div>

                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      SMTP user:
                    </label>
                    <input type="text" minlength="5" maxlength="50" required name="SMTP_USER" class="form-control"
                      id="smtp_user" placeholder="example@mail.com" value="<%= smtp.user %>">
                  </div>

                  <div class="form-group">
                    <label class="d-block mb-2 text-muted fw-bold">
                      SMTP Password:
                    </label>
                    <input type="password" minlength="1" maxlength="50" required name="SMTP_PASSWORD"
                      class="form-control" id="smtp_password" placeholder="skdksdksjbdsckjbdcs"
                      value="<%= smtp.password %>">
                  </div>

                  <div class="form-group">
                    <button type="submit" name="adminEmail" class="btn btn-success w-100 btn-lg">Save <i
                        class="mdi mdi-content-save"></i></button>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6"></div>
