                    </li>
                    <li class="breadcrumb-item active">New</li>
                  </ol>
                  <!--end breadcrumb-->
                </div>
                <!--end /div-->
                <h4 class="page-title">New Post</h4>
              </div>
              <!--end page-title-box-->
            </div>
            <!--end col-->
          </div>
          <!--end row-->
          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-body">
                  <form action="/vendor/blog/add-new-blog" method="post" class="row" enctype="multipart/form-data">
                    <div class="col-md-6 mb-3">
                      <label class="text-muted fw-bold d-block">
                        Title <small>(* required)</small>
                        <input type="text" name="title" class="form-control w-100" required minlength="5"
                          maxlength="120">
                      </label>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label class="text-muted fw-bold d-block">
                        Meta Description <small>(* required)</small>
                        <input type="text" name="description" class="form-control w-100" required minlength="5"
                          maxlength="120">
                      </label>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label class="text-muted fw-bold d-block">
                        Meta Keywords <small>(* comma seperated)</small>
                        <input type="text" name="Keywords" class="form-control w-100" required minlength="5"
                          maxlength="120">
                      </label>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label class="text-muted fw-bold d-block">
                        Category <small>(* required)</small>
                        <input type="text" name="category" class="form-control w-100" required minlength="5">
                      </label>
                    </div>
                    <div class="col-md-12 mb-3">
                      <label class="text-muted fw-bold d-block">
                        Blog Post
                        <textarea name="htmlEditor" id="elm1" class="editor form-control w-100" cols="30"
                          rows="10"></textarea>
                      </label>
                    </div>
                    <!-- FILE UPLOAD -->
                    <div class="col-md-12 mb-3 d-flex justify-content-center">
                      <div class="card col-6">
                        <div class="card-body">
                          <h4 class="mt-0 header-title">Featured Image</h4>
                          <label
                            class="d-flex flex-column p-2 align-items-center justify-content-center border border-1 curp">
                            <img src="/IMAGES/image.png" height="200" width="300" class="mb-2 ob-fit">
                            <small>Click to upload an image</small>
                            <input type="file" name="image" id="blog_image" class="d-none">
                          </label>
                        </div><!--end card-body-->
                      </div><!--end card-->
                    </div>
                    <div class="col-md-12 d-flex justify-content-center mb-2">
                      <button type="submit" name="action" value="draft" class="submit btn btn-sm btn-primary w-50">
                        Save Draft
                        <i class="ti ti-save"></i>
                      </button>
                    </div>
                    <div class="col-md-12 d-flex justify-content-center">
                      <button type="submit" name="action" value="public" class="submit btn btn-sm btn-success w-50">
                        Publish
                        <i class="ti ti-save"></i>
                      </button>
                    </div>

                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- end page title end breadcrumb -->
        </div>
        <!-- container -->
